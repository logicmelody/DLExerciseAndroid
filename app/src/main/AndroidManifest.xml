<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dl.dlexerciseandroid">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Permissions for provider -->
    <uses-permission android:name="com.dl.dlexerciseandroid.provider.permission.READ" />
    <uses-permission android:name="com.dl.dlexerciseandroid.provider.permission.WRITE" />

    <!-- 要把自己定義的Application class在AndroidManifest中進行設定 -->
    <application
        android:name=".main.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- 要將Facebook app id設定在這邊 -->
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".main.MainActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.Drawer">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".coordinatorlayout.CoordinatorLayoutActivity" />
        <activity
            android:name=".dialog.activity.AddTaskActivity"
            android:theme="@style/AppDialogTheme.NoActionBar" />

        <!-- 此Activity用來接收別的app share過來的intent，一定要用Activity才收的到 -->
        <!--
             我們這邊的目的，是希望別的app share過來的intent，我們解析其資訊之後就存到db，所以我們不需要Activity的UI
             可以套上@android:style/Theme.NoDisplay，如此一來就可以啟動Activity，但是不會看到任何畫面
        -->
        <activity
            android:name=".doitlater.share.DoItLaterReceiverActivity"
            android:theme="@android:style/Theme.NoDisplay">

            <!-- 設定接收share intent的filter記得要加action, category, data -->
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="image/*" />
                <data android:mimeType="video/*" />
                <data android:mimeType="text/plain" />
            </intent-filter>

            <intent-filter>
                <action android:name="com.dl.dlexerciseandroid.ACTION_DO_IT_LATER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".intent.ReceiveIntentActivity">
            <intent-filter>
                <action android:name="com.dl.dlexerciseandroid.ACTION_RECEIVE_INTENT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Facebook login activity -->
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <!-- Debug database -->
        <activity
            android:name=".database.debug.AndroidDatabaseManager"
            android:theme="@style/Theme.AppCompat.Light" />

        <!--
        用receiver沒有辦法收到來自別的app的shared intent
        <receiver android:name=".doitlater.DoItLaterShareReceiver">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="image/*" />
                <data android:mimeType="video/*" />
                <data android:mimeType="text/plain" />
            </intent-filter>
        </receiver>
        -->
        <service android:name=".background.service.DoItLaterService" />

        <provider
            android:name=".database.provider.DLExerciseContentProvider"
            android:authorities="com.dl.dlexerciseandroid.provider"
            android:exported="false"
            android:multiprocess="false"
            android:readPermission="com.dl.dlexerciseandroid.provider.permission.READ"
            android:writePermission="com.dl.dlexerciseandroid.provider.permission.WRITE" />

    </application>

</manifest>