<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_view_ying_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_ying_avatar"/>

    <TextView
        android:id="@+id/text_view_ying_normal_message_text"
        style="@style/MessageItem"
        android:layout_toRightOf="@+id/image_view_ying_avatar"
        android:layout_alignTop="@+id/image_view_ying_avatar"
        android:background="@drawable/background_chat_ying_normal_message"/>

</RelativeLayout>
