<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_instagram_api_feed_item"
    android:orientation="vertical">

    <com.dl.dlexerciseandroid.utility.component.DynamicHeightNetworkImageView
        android:id="@+id/image_view_instagram_api_ig_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_instagram_api_feed_item_description"
        android:orientation="vertical"
        android:background="@color/background_feed_item">

        <TextView
            android:id="@+id/text_view_instagram_api_feed_item_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/all_theme" />

    </LinearLayout>

</LinearLayout>