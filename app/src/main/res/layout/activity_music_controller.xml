<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_all_window" >

        <TextView
            android:id="@+id/text_view_music_controller_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textColor="@color/all_black" />

        <TextView
            android:id="@+id/text_view_music_controller_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_music_controller_title"
            android:layout_centerHorizontal="true"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textColor="@color/all_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_view_music_controller_shuffle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_music_controller_shuffle"
                android:background="?selectableItemBackgroundBorderless"/>

            <ImageView
                android:id="@+id/image_view_music_controller_previous"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_music_controller_previous"
                android:background="?selectableItemBackgroundBorderless"/>

            <ImageView
                android:id="@+id/image_view_music_controller_play_or_pause"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_music_controller_pause"
                android:background="?selectableItemBackgroundBorderless"/>

            <ImageView
                android:id="@+id/image_view_music_controller_next"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_music_controller_next"
                android:background="?selectableItemBackgroundBorderless"/>

            <ImageView
                android:id="@+id/image_view_music_controller_loop"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_music_controller_loop"
                android:background="?selectableItemBackgroundBorderless"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>


